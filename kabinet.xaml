<Page x:Class="WpfApp1.kabinet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="kabinet">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Image Name="UserPhoto" Width="100" Height="100" VerticalAlignment="Top" Margin="10" Source="Resources\заглушка.png"/>
                <Button Name="ButtonIzPhoto" Click="ButtonIzPhoto_Click">Изменить фото</Button>
            </StackPanel>
            <StackPanel Margin="10">
                <GroupBox Header="Имя пользователя">
                    <TextBlock Name="TBIm"></TextBlock>
                </GroupBox>
                <GroupBox Header="Фамилия пользователя">
                    <TextBlock Name="TBFam"></TextBlock>
                </GroupBox>
                <Button Name="ButtonRed" Margin="0,10,0,0" Click="ButtonRed_Click" >Редактировать профиль</Button>
                <Button  Name="ButtonVihod" Margin="0,10,0,0" Click="ButtonVihod_Click">Выход</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
