<Page x:Class="WpfApp1.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <StackPanel Name="st2" VerticalAlignment="Top" Grid.Row="0">
            <Button Name="spisok" Content="Список пользователей" Width ="140" Margin="0,10,0,0" Click="spisok_Click" VerticalAlignment="Top"></Button>
            <Button Name="kosmet" Content="Каталог косметики" Width ="140" Margin="0,10,0,0" Click="kosmet_Click" VerticalAlignment="Top"></Button>
            <Button Name="glaviek" Content="На главный экран" Width ="140" Margin="0,10,0,0" Click="glaviek_Click" VerticalAlignment="Top"></Button>
            <Button Name="klas" Content="Класификация" Width ="140" Margin="0,10,0,0" Click="klas_Click" VerticalAlignment="Top"></Button>
        </StackPanel>
        <Frame x:Name="fr_katalog" Grid.Row ="1"/>
    </Grid>
</Page>
