<Window x:Class="WpfApp1.Okno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Okno" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Имя:" HorizontalAlignment="Center" FontSize="15" Margin="0, 10,0,0"/>
            <TextBox Name="Imi"   HorizontalAlignment="Center" Margin="0,10,0,0"  Height="20" Width="80"/>
            <TextBlock Text="Фамилия:" HorizontalAlignment="Center" FontSize="15" Margin="0, 10,0,0"/>
            <TextBox Name="Fam" HorizontalAlignment="Center" Margin="0,10,0,0"  Height="20" Width="80"/>
            <TextBlock Text="Логин:" HorizontalAlignment="Center" FontSize="15" Margin="0, 10,0,0"/>
            <TextBox Name="Log" HorizontalAlignment="Center" Margin="0,10,0,0"  Height="20" Width="80"/>
            <TextBlock Text="Пароль:" HorizontalAlignment="Center" FontSize="15" Margin="0, 10,0,0"/>
            <PasswordBox Name="Par" HorizontalAlignment="Center" Margin="0,10,0,0"  Height="20" Width="80"/>
            <Button  Name="ButtonIzmena" Margin="0,10,0,0"  Height="20" Width="80" Click="ButtonIzmena_Click" >Изменить</Button>
        </StackPanel>
    </Grid>
</Window>
